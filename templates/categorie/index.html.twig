{% extends 'base.html.twig' %}

{% block title %}Toutes les categories{% endblock %}

{% block body %}
    {% include 'includes/FrontNav.html.twig' %}
    {% include 'includes/FrontSubMenu.html.twig' %}

    <section class="CategorieTitle">
        <figure class="CategorieImg">
            <img src="{{ asset('assets/images/choisir-siege-auto.png') }}">
        </figure>
        <div class="CategorieT">
            <h1>Voir les categories</h1>
            <p>Retrouvez les essentiels</p>
        </div>
    </section>
        
    <section class="CategorieList">
        {% for categorie in CategorieController %}
            <div class="CategorieContent">
                <img src="{{ asset('assets/upload/products/' ~ categorie.image) }}">
                <div class="CategorieName">
                    <p>{{ categorie.name }}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    {% include 'includes/FrontGaranties.html.twig' %}
    {% include 'includes/FrontFooter.html.twig' %}
{% endblock %}
